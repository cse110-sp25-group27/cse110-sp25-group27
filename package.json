{
  "name": "box_office",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "generate-docs": "documentation build backend/*.js frontend/scripts/**.js -f md -o docs/documentation.md",
    "posttest": "cp docs/coverage_report/lcov-report/index.html docs/coverage_report/index.html"
  },
  "type": "module",
  "jest": {
    "transform": {},
    "verbose": true,
    "setupFiles": [
      "./__tests__/testSetup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/testSetup.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "docs/coverage_report",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "documentation": "^14.0.3",
    "eslint": "^9.26.0",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3"
  }
