{
  "name": "box_office",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "http-server -c-1",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=__tests__/e2e.test.js",
    "test:e2e": "start-server-and-test start http-get://localhost:8080 'node --experimental-vm-modules node_modules/jest/bin/jest.js __tests__/e2e.test.js'",
    "generate-docs": "documentation build backend/*.js frontend/scripts/**.js -f md -o docs/documentation.md",
    "posttest": "cp docs/coverage_report/lcov-report/index.html docs/coverage_report/index.html"
  },
  "type": "module",
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {},
    "verbose": true,
    "setupFiles": [
      "./unit-testing/testSetup.js"
    ],
    "codeCoverage": true,
    "coverageDirectory": "docs/coverage_report",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "documentation": "^14.0.3",
    "eslint": "^9.26.0",
    "eslint-plugin-jest": "^28.11.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-puppeteer": "^6.0.0",
    "puppeteer": "^21.0.0",
    "start-server-and-test": "^2.0.12"
  }
}
